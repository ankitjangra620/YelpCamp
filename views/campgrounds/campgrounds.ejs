<%-include("../partials/header.ejs")%>
<div class="container">
	<header class="jumbotron">
		<div clas="container">
				<h1 class=" display-2">
	Welcome to YelpCamp!
	</h1>
		<p>
			View our hand picked campground from all over the world
		</p>
		<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
		</div>
	</header>


<div class="row ">
	
	<% campgrounds.forEach(function(camp){%>
	<div class="col-lg-4 col-md-6 pb-2">
			<div class="img-thumbnail">
				<img src="<%=camp.image%>" class="img-fluid  fab" alt="Responsive image">
               <div class="caption text-center pt-3">
	                <h4>
						<%=camp.title%>
				   </h4>
				    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary mb-1">More Info</a> 
				</div>
		
			</div>
			  
		</div>
	<%})%>
	
</div>
	
</div> 

<%-include ("../partials/footer.ejs")%>