	  <div class="row">
		  <div class="col-6">
			     <h4> 
					 <a class="hi" href="#"> <%=camp.title%></a>
				</h4>
			 
		  </div>
		  <div class="col-6">
			<h4 class="text-right">
				RS=630.00/night	
			  </h4>
		  </div>
	  </div>
